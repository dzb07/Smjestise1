<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bih.ba.smjestise.smjestise.Fragments.RateApp">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:id="@+id/rate_all"
       android:gravity="center_horizontal|center_vertical"
       android:layout_centerVertical="true"
       >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you find our app useful?"
        android:textAlignment="center"
        android:textSize="25sp"
        android:id="@+id/app_useful"

        android:layout_centerHorizontal="true"
        />
    <RatingBar
        android:id="@+id/ratingBar"
        android:numStars="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:theme="@style/CustomRatingBar"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Wanna add comment as well? Click here..."
           android:textAlignment="center"
           android:textSize="15sp"
           android:layout_below="@+id/ratingBar"
           android:layout_centerHorizontal="true"
           />

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/openComment"
           android:text="Comment"
           android:textAllCaps="false"

           android:background="@drawable/button_transparent_border"/>

       <EditText
           android:layout_width="250dp"
           android:layout_height="100dp"
           android:inputType="text|textMultiLine"
           android:id="@+id/userComment"
           android:hint="Comment..."
           android:visibility="gone"
          />
   </LinearLayout>
      <Button
          android:layout_width="210dp"
          android:layout_height="wrap_content"
          android:text="Done"
          android:id="@+id/submitRate"
          android:background="@drawable/button_transparent_border"
          android:textAllCaps="false"
          android:layout_alignParentBottom="true"
          android:layout_centerHorizontal="true"/>

</RelativeLayout>
